{
    "manifest_version": 3,
    "name": "furigana over",
    "description": "get over furigana",
    "permissions": [ "scripting", "storage" ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "スイッチ【オン・オフ】",
        "default_icon": {
            "32": "icons/32.png"
        }
    },
    "content_scripts": [{
        "matches": [ "<all_urls>" ],
        "js": [ "content.js", "db.js" ],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [{
        "resources": [
            "template1.html",
            "template1.css"
        ],
        "matches": ["<all_urls>"]
    }],
    "version": "1.0"
}